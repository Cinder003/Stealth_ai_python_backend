# ============================================
# TEST ENVIRONMENT
# ============================================

ENVIRONMENT=test
DEBUG=true
RELOAD=false

# Application
APP_NAME=Unified Codegen Platform Test
APP_VERSION=1.0.0
SECRET_KEY=test-secret-key

# API Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=1
API_V1_PREFIX=/api/v1

# Security
ALLOWED_HOSTS=*
CORS_ORIGINS=*
JWT_SECRET_KEY=test-jwt-secret

# ============================================
# SERVICES (Test ports to avoid conflicts)
# ============================================

# LiteLLM Proxy
LITELLM_URL=http://localhost:4001
LITELLM_MASTER_KEY=sk-test-master-key
LITELLM_TIMEOUT=60
LITELLM_MAX_RETRIES=1

# Redis (Different port and DB for tests)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=15
REDIS_PASSWORD=test-password
REDIS_URL=redis://:test-password@localhost:6380/15
CACHE_TTL=300

# NATS
NATS_URL=nats://localhost:4223
NATS_MAX_RECONNECT_ATTEMPTS=3
NATS_RECONNECT_TIME_WAIT=1

# Langfuse (Disabled for tests)
LANGFUSE_HOST=http://localhost:3002
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=test-pk
LANGFUSE_SECRET_KEY=test-sk
LANGFUSE_DB_PASSWORD=test-langfuse-password
LANGFUSE_NEXTAUTH_SECRET=test-nextauth-secret
LANGFUSE_SALT=test-salt

# ============================================
# API KEYS (Mock/test keys)
# ============================================
GEMINI_API_KEY=test-gemini-key
OPENAI_API_KEY=test-openai-key
ANTHROPIC_API_KEY=test-anthropic-key

# ============================================
# STORAGE (Temporary test directories)
# ============================================
STORAGE_PATH=/tmp/test_storage/generated
TEMP_PATH=/tmp/test_storage/temp
CACHE_PATH=/tmp/test_storage/cache
LOGS_PATH=/tmp/test_storage/logs
MAX_FILE_SIZE=10485760
MAX_FILES_PER_PROJECT=100

# ============================================
# RATE LIMITING (Disabled for tests)
# ============================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=99999
RATE_LIMIT_PER_HOUR=99999

# ============================================
# LOGGING (Minimal logging for tests)
# ============================================
LOG_LEVEL=ERROR
LOG_FORMAT=json

# ============================================
# MONITORING (Disabled for tests)
# ============================================
ENABLE_METRICS=false
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# ============================================
# CODE GENERATION
# ============================================
MAX_GENERATION_TIME=30
DEFAULT_FRONTEND_FRAMEWORK=react
DEFAULT_BACKEND_FRAMEWORK=nodejs
ENABLE_AUTO_FORMAT=false

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_FIGMA_INTEGRATION=false
FEATURE_GITHUB_INTEGRATION=false
FEATURE_CODE_VALIDATION=false
FEATURE_AUTO_DEPLOYMENT=false
