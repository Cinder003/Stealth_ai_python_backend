# ============================================
# PRODUCTION ENVIRONMENT
# ============================================

ENVIRONMENT=production
DEBUG=false
RELOAD=false

# Application
APP_NAME=Unified Codegen Platform
APP_VERSION=1.0.0
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# API Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=8
API_V1_PREFIX=/api/v1

# Security
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
JWT_SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# ============================================
# SERVICES (Docker internal names)
# ============================================

# LiteLLM Proxy
LITELLM_URL=http://litellm:4000
LITELLM_MASTER_KEY=sk-your-generated-master-key
LITELLM_TIMEOUT=300
LITELLM_MAX_RETRIES=3

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=STRONG_REDIS_PASSWORD
REDIS_URL=redis://:STRONG_REDIS_PASSWORD@redis:6379/0
CACHE_TTL=3600

# NATS
NATS_URL=nats://nats:4222
NATS_MAX_RECONNECT_ATTEMPTS=10
NATS_RECONNECT_TIME_WAIT=2

# Langfuse
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-lf-production-key
LANGFUSE_SECRET_KEY=sk-lf-production-key
LANGFUSE_DB_PASSWORD=STRONG_LANGFUSE_DB_PASSWORD
LANGFUSE_NEXTAUTH_SECRET=SECURE_RANDOM_STRING_HERE
LANGFUSE_SALT=SECURE_RANDOM_STRING_HERE

# ============================================
# API KEYS (Use production keys)
# ============================================
GEMINI_API_KEY=your-production-gemini-key
OPENAI_API_KEY=your-production-openai-key
ANTHROPIC_API_KEY=your-production-anthropic-key

# ============================================
# STORAGE (Container paths)
# ============================================
STORAGE_PATH=/app/storage/generated
TEMP_PATH=/app/storage/temp
CACHE_PATH=/app/storage/cache
LOGS_PATH=/app/storage/logs
MAX_FILE_SIZE=104857600
MAX_FILES_PER_PROJECT=1000

# ============================================
# RATE LIMITING (Production limits)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# LOGGING (Production logging)
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=STRONG_GRAFANA_PASSWORD

# ============================================
# CODE GENERATION
# ============================================
MAX_GENERATION_TIME=600
DEFAULT_FRONTEND_FRAMEWORK=react
DEFAULT_BACKEND_FRAMEWORK=nodejs
ENABLE_AUTO_FORMAT=true

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_FIGMA_INTEGRATION=false
FEATURE_GITHUB_INTEGRATION=false
FEATURE_CODE_VALIDATION=true
FEATURE_AUTO_DEPLOYMENT=false
