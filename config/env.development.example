# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================

ENVIRONMENT=development
DEBUG=true
RELOAD=true

# Application
APP_NAME=Unified Codegen Platform
APP_VERSION=1.0.0
SECRET_KEY=dev-secret-key-not-for-production

# API Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2
API_V1_PREFIX=/api/v1

# Security (Relaxed for development)
ALLOWED_HOSTS=*
CORS_ORIGINS=*
JWT_SECRET_KEY=dev-jwt-secret

# ============================================
# SERVICES (localhost for local development)
# ============================================

# LiteLLM Proxy
LITELLM_URL=http://localhost:4000
LITELLM_MASTER_KEY=sk-dev-master-key
LITELLM_TIMEOUT=300
LITELLM_MAX_RETRIES=3

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=dev-password
REDIS_URL=redis://:dev-password@localhost:6379/0
CACHE_TTL=3600

# NATS
NATS_URL=nats://localhost:4222
NATS_MAX_RECONNECT_ATTEMPTS=10
NATS_RECONNECT_TIME_WAIT=2

# Langfuse
LANGFUSE_HOST=http://localhost:3000
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_DB_PASSWORD=dev-langfuse-password
LANGFUSE_NEXTAUTH_SECRET=dev-nextauth-secret
LANGFUSE_SALT=dev-salt

# ============================================
# API KEYS (Use development/test keys)
# ============================================
GEMINI_API_KEY=your-dev-gemini-key-here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================
# STORAGE (Local paths)
# ============================================
STORAGE_PATH=./storage/generated
TEMP_PATH=./storage/temp
CACHE_PATH=./storage/cache
LOGS_PATH=./storage/logs
MAX_FILE_SIZE=104857600
MAX_FILES_PER_PROJECT=1000

# ============================================
# RATE LIMITING (Relaxed for development)
# ============================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# ============================================
# LOGGING (Verbose for development)
# ============================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=admin

# ============================================
# CODE GENERATION
# ============================================
MAX_GENERATION_TIME=600
DEFAULT_FRONTEND_FRAMEWORK=react
DEFAULT_BACKEND_FRAMEWORK=nodejs
ENABLE_AUTO_FORMAT=true

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_FIGMA_INTEGRATION=false
FEATURE_GITHUB_INTEGRATION=false
FEATURE_CODE_VALIDATION=true
FEATURE_AUTO_DEPLOYMENT=false
